@{
    ViewData["Title"] = "Home Page";
}
@model UseJwtTokenInMvcWebApp.Controllers.LoginModel 

    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <div class="login-box">
           

                    <form id="frmLogin" asp-action="Login" asp-controller="Home"  method="post">


                        <div class="form-group">
                            <div class="input-group mb-3">
                                <input asp-for="@Model.UserName" class="form-control" placeholder="Email">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-envelope"></span>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <div class="input-group mb-3">
                                <input asp-for="@Model.Password" class="form-control" placeholder="Password">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>


                        <div class="row">

                            <!-- /.col -->
                            <div class="col-4">
                                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>
                </div>
                <!-- /.login-card-body -->
            </div>
   
